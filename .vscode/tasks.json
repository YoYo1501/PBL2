{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PBL2(2)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "src/Main.cpp",
                "src/AuthSystem.cpp",
                "src/AdminMenu.cpp",
                "src/StudentMenu.cpp",
                "src/MainMenu.cpp",
                "src/models/User.cpp",
                "src/models/Room.cpp",
                "src/models/Payment.cpp",
                "-o",
                "build/out.exe",
                "-I",
                "include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}